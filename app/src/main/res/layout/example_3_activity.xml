<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- We don't need this inner FrameLayout. We have it here just for consistency with the rest
            of the sample app -->
        <!-- We can also embed the fragment in xml using the fragment tag. However, we create the
            fragment in Java for this example. -->
        <FrameLayout
            android:id="@+id/parent_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fragment_background" />
    </FrameLayout>
</ScrollView>